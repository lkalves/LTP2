<Gerenciador>:
    Menu:
        name: 'menu'
    Tarefas:
        name: 'tarefas'
    Sobre:
        name: 'sobre'
    
<Menu>:
    BoxLayout:
        orientation: 'vertical'
        padding:100
        spacing:20

        Image:
            source: 'kivy.jpg'
            size_hint_y: None
            height: 200
            allow_stretch: True

        Button:
            text: 'Tarefas'
            on_release: app.root.current='tarefas'
        Button:
            text: 'Sobre'
            on_release: app.root.current='sobre'

        Button:
            text: 'Sair'
            on_release: app.stop()

<Tarefas>:
    BoxLayout:
        orientation: 'vertical'
        ActionBar:
            ActionView:
                ActionPrevious:
                    title:'Tarefas'
                    on_release: app.root.current='menu'
                ActionButton:
                    text:'Sair'
                    on_release:app.stop()
        ScrollView:
            BoxLayout:
                id: box
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height
               
                
        BoxLayout:
            size_hint_y: None
            height: 60
            TextInput:
                id: texto
                font_size: 30
            Button:
                text:'<--' 
                size_hint_x: None        
                width: 30
                on_release: app.root.current='menu'
            Button:
                text:'+'
                size_hint_x: None
                width: 30
                on_release: root.addWidget()

<Tarefa>:
    size_hint_y: None
    height: 100
    Label: 
        id: label
        font_size: 30
    Button:
        text: 'X'
        size_hint_x: None
        width: 60
        on_release: app.root.get_screen('tarefas').ids.box.remove_widget(root)
    

<Sobre>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'pega a vis√£o!!!!'
        Button:
            orientation:'vertical'
            height: 30
            width: 30
            text: 'Voltar'
            on_release: app.root.current='menu'


            
            
